<div class="container main-block">
	<div class="page-header">
		<h1>Request date and time of appointment <small>We will contact you for confirmation</small></h1>
	</div>
	<%= form_tag("/appointments/createold",method: "post") do %>
	<%= label_tag(:reg_no, "Registration No.") %>
	<%= text_field_tag(:reg_no) %>
	<%= label_tag(:reg_no, "Select Date") %>
	<%#= select_date Date.today, prefix: :request_date %>
	<input type="text" data-behaviour='datepicker' name="request_date"/>
	<%= label_tag(:reg_no, "Select Time") %>
	<div class='input-append bootstrap-timepicker-component' style='display: inline;'>
		<input id="timepicker" class='dateselect-time input-small' name="request_time" type='text' data-time='12:45 PM'>
		<span class='add-on'><i class='icon-time'></i></span>
	</div> 

	<%#= select_time Time.now, prefix: :request_time %>
	<br />
	<br />
	<input type="submit" value="Request Appointment" class="btn btn-success"/>
	<% end %>
</div>